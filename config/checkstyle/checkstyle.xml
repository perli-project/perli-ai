<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="error"/>

    <module name="TreeWalker">
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern" value="클래스 이름 ''{0}''은 PascalCase(예: UserService)를 따라야 합니다."/>
        </module>

        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern" value="메서드 이름 ''{0}''은 camelCase(예: findUserById)를 따라야 합니다."/>
        </module>

        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern" value="로컬 변수 이름 ''{0}''은 camelCase(예: currentUser)를 따라야 합니다."/>
        </module>
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern" value="클래스 멤버 변수 이름 ''{0}''은 camelCase를 따라야 합니다."/>
        </module>

        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
            <message key="name.invalidPattern" value="상수 이름 ''{0}''은 SCREAMING_SNAKE_CASE(예: MAX_RETRY)를 따라야 합니다."/>
        </module>

        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
            <message key="name.invalidPattern" value="패키지 이름 ''{0}''은 모두 소문자여야 합니다."/>
        </module>
    </module>
</module>